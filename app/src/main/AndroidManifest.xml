<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asiah.formfit">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:label="FormFit">

        <!-- Main Activity (Splash Screen) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".main.LoginActivity"
            android:exported="false" />

        <!-- Exercise Setup Activity -->
        <activity
            android:name=".main.ExerciseSetupActivity"
            android:exported="false" />

        <!-- Active Exercise Activity -->
        <activity
            android:name=".main.ActiveExerciseActivity"
            android:exported="false" />

        <!-- Exercise Library Activity -->
        <activity
            android:name=".main.ExerciseLibraryActivity"
            android:exported="false" />

        <!-- Progress Activity -->
        <activity
            android:name=".main.ProgressActivity"
            android:exported="false" />

    </application>
</manifest>